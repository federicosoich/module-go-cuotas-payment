<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
                <group id="gocuotas" translate="label" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">

                    <label>Go Cuotas Payment</label>

                    <field id="active" translate="label comment" sortOrder="1" type="select" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Enable</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>

                    <field id="title" translate="label comment" sortOrder="2" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Title</label>
                        <comment>You can change this message</comment>
                    </field>

                    <field id="message" translate="label comment" sortOrder="3" type="text" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Checkout Message</label>
                        <comment>You can change this message</comment>
                    </field>

                    <field id="email" translate="label comment" sortOrder="4" type="text" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Email</label>
                        <comment>"seller_sandbox@gocuotas.com" for test</comment>
                    </field>
                  
                    <field id="password" translate="label comment" sortOrder="6" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Password</label>
                        <comment>"secret" for test</comment>
                    </field>

                    <field id="email_invoice" translate="label comment" sortOrder="7" type="select" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Send email invoice</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>

                    <field id="redirect" translate="label comment" sortOrder="10" type="select" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Redirect</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>Si selecciona NO se usara la version POPUP</comment>
                    </field>

                    <field id="messagepopup" translate="label comment" sortOrder="13" type="text" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Checkout Message POPUP</label>
                        <comment>You can change this message</comment>
                    </field>

                    <field id="messagepopupalert" translate="label comment" sortOrder="14" type="text" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Alert Message POPUP</label>
                        <comment>You can change this message</comment>
                    </field>
                </group>
        </section>
    </system>
</config>
